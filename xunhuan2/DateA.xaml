						<TextBlock  Text="&#xe6e7;" Margin="0 0 0 0" FontFamily="../fonts/#iconfont"  VerticalAlignment="Center" FontSize="25" Foreground="White" />
						<StackPanel Margin="18 0 0 0" VerticalAlignment="Center">
							<TextBlock Text="音波视图" FontSize="20" Foreground="White"/>
